<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 폰트 관련 기본 스타일 정의 -->
    <style name="TextAppearance.Snapshot.Base" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/font_noto_sans</item>
        <item name="android:fontFamily">@font/font_noto_sans</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- 기본 폰트 크기와 웨이트 정의 -->
    <style name="TextAppearance.Snapshot.Headline1" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.Snapshot.Headline2" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Snapshot.Title" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.Snapshot.Subtitle" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.Snapshot.Body" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Snapshot.Caption" parent="TextAppearance.Snapshot.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources> 