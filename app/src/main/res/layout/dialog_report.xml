<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_post_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radio_group_report_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_inappropriate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_inappropriate"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/radio_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_spam"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/radio_harmful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_harmful"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/radio_false_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_false_info"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/radio_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_reason_other"
            android:padding="8dp"/>
    </RadioGroup>

    <EditText
        android:id="@+id/edit_text_custom_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/report_custom_reason_hint"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLines="4"
        android:visibility="gone"
        android:padding="12dp"
        android:background="@drawable/bg_comment_input"/>

</LinearLayout> 